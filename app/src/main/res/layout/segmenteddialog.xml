<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/closeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                app:srcCompat="@drawable/ico_rename_del" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zeroplus.codeutility.utility.segmented.kotlin.SegmentedControl
                android:id="@+id/segmented_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.zeroplus.codeutility.utility.segmented.kotlin.SegmentedControlButton
                    android:id="@+id/opt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/round_corner"
                    android:text="Button1"
                    android:textAlignment="viewStart"
                    tools:ignore="TouchTargetSizeCheck"></com.zeroplus.codeutility.utility.segmented.kotlin.SegmentedControlButton>

                <com.zeroplus.codeutility.utility.segmented.kotlin.SegmentedControlButton
                    android:id="@+id/opt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/round_corner"
                    android:text="Button2"
                    android:textAlignment="center"
                    tools:ignore="TouchTargetSizeCheck"></com.zeroplus.codeutility.utility.segmented.kotlin.SegmentedControlButton>

                <com.zeroplus.codeutility.utility.segmented.kotlin.SegmentedControlButton
                    android:id="@+id/opt_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/round_corner"
                    android:text="Button3"
                    android:textAlignment="viewEnd"
                    tools:ignore="TouchTargetSizeCheck"></com.zeroplus.codeutility.utility.segmented.kotlin.SegmentedControlButton>

            </com.zeroplus.codeutility.utility.segmented.kotlin.SegmentedControl>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>